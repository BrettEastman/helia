---
import FooterLinkButton from "./FooterLinkButton.astro";

interface Props {
  eventTitle: string;
  artistPhoto?: string;
  photoCaption: string;
  eventDescription: string;
}

const { eventTitle, artistPhoto, photoCaption, eventDescription } = Astro.props;
---

<div>
  <h1>
    {eventTitle}
  </h1>
  {artistPhoto && <img src={artistPhoto} alt={photoCaption} />}
  <p>
    {eventDescription}
  </p>
  <FooterLinkButton href="/events" text="Back to Events" />
</div>