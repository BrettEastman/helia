---
import '@fontsource-variable/montserrat';
---

<div class="nav-links">
  <a href="/">Home</a>
  <a href="/about">About</a>
  <a href="/events">Events</a>
  <a href="/media">Media</a>
  <a href="/spotlights">Spotlights</a>
  <a href="/contact">Contact</a>
</div>

<style>
  .nav-links {
    width: 100%;
    font-family: 'Montserrat', sans-serif;
    top: 5rem;
    left: 48px;
    background-color: var(--logoAccent);
    display: none;
    margin: 0;
  }

  .nav-links a {
    display: block;
    text-align: center;
    padding: 10px 0;
    text-decoration: none;
    font-size: 1rem;
    text-transform: uppercase;
  }

  .nav-links a:hover,
  .nav-links a:focus {
    background-color: var(--logoAccent);
  }

  .expanded {
    display: unset;
  }

  @media screen and (min-width: 636px) {
    .nav-links {
      margin-left: 5em;
      display: block;
      position: static;
      width: auto;
      background: none;
    }

    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
    }
  }
</style>