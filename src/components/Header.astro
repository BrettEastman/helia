---
import Navigation from "./Navigation.astro"
import Hamburger from "./Hamburger.astro"
---

<header>
  <h1
    class="name-header"
  >
    Helia Music Collective
  </h1>
  <nav>
    <Hamburger />
    <Navigation />
  </nav>
</header>

<style>
  .name-header {
    font-weight: 500;
    display: flex;
    justify-content: space-around;
    text-transform: uppercase;
    padding: 1rem;
    margin-bottom: 1rem;
    letter-spacing: 0.1em;
    font-size: 3rem;
    text-align: center;
    align-items: center;
    color: var(--primary30);
    @media (min-width: 768px) {
      font-size: 3.75rem;
    }
  }
</style>