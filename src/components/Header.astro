---
import Navigation from "./Navigation.astro"
import Hamburger from "./Hamburger.astro"
import ThemeIcon from "./ThemeIcon.astro"
import { Image } from "astro:assets";
import heliaLogo from "../images/Helia_web_H.png";
---

<header>
  <div class="name-header">
    <Image src={heliaLogo} width={300} alt="Helia Logo" />
    <ThemeIcon />
  </div>
  <nav>
    <Hamburger />
    <Navigation />
  </nav>
</header>

<style>
  .name-header {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    padding: 1rem;
    align-items: center;
  }
</style>