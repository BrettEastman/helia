---
import Layout from '../layouts/Layout.astro';
import { Image } from "astro:assets";
import backgroundAmbience from "../images/helia-background-low-q.jpg";
import julieEmmaPath from "../images/Julie&Emma-LowQ-path.jpg";
---

<Layout title="Helia Music Collective">
	<main>
		<section class="hero">
			<Image width={1600} height={450} alt={'Background ambient colors'} src={backgroundAmbience} />
			<div class="inner-hero">
				<p>Helia Music Collective supports the creative endeavors of women in music throughout the San Francisco Bay Area.</p>
				<Image width={898} height={599} alt={'Julie and Emma standing on a path, with the sun'} src={julieEmmaPath}/>

			</div>
		</section>

	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
	}
	.hero {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		font-family: 'Lato', sans-serif;
		font-weight: 300;
		font-size: 24px;
	}
	.inner-hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		gap: 3rem;
		background-color: var(--heroBackground);
		color: var(--primary30);
		padding: 3rem;
		text-align: center;
	}
</style>
