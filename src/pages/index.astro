---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import julieEmmaPath from "../images/je-path.jpg";
import WindowPhoto from "../components/WindowPhoto.astro";

const pageTitle = "Home";
const description = "Helia Music Collective supports the creative endeavors of women in music throughout the San Francisco Bay Area. Visit our website to learn more."
---

<Layout title={pageTitle} description={description}>
  <div class="main-format">
    <section class="banner-title">
      <WindowPhoto text="hēlē'a - of the sun" />
    </section>
    <section class="hero">
      <div class="inner-hero">
        <p>
          Helia Music Collective supports the creative endeavors of women in
          music throughout the San Francisco Bay Area.
        </p>
        <a href="/about">About us</a>
        <Image
          width={898}
          height={599}
          alt="Emma & Julie standing on the path at Land's End looking in different directions from each other"
          src={julieEmmaPath}
          class="responsive-image"
        />
      </div>
    </section>
  </div>
</Layout>

<style>
  .main-format {
    display: flex;
    flex-direction: column;
  }
  .banner-title {
    position: relative;
    z-index: 1;
  }
  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    font-family: "Lato", sans-serif;
    font-weight: 300;
    font-size: 24px;
    position: relative;
    z-index: 1;
  }
  .inner-hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    gap: 3rem;
    background-color: var(--heroBackground);
    color: var(--primary30);
    padding: 3rem;
    text-align: center;
  }
  a {
    text-align: center;
    color: var(--primary100);
    font-family: "Lato", sans-serif;
    font-weight: 400;
    letter-spacing: 0.1em;
    background-color: var(--primary20);
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-size: 15px;
    text-transform: uppercase;
    transition: background-color 300ms;
  }
  a:hover {
    background-color: var(--primary30);
    color: var(--primary100);
  }
  .responsive-image {
    width: 100%;
    max-width: 900px;
    height: auto;
    object-fit: cover;
  }
</style>
