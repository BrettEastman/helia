---
import Layout from '../layouts/Layout.astro';

const pageTitle = "About";

const identity = {
  firstName: "Julie",
  city: "San Francisco",
  occupation: "Software Developer",
  hobbies: ["dogwatching", "birdwatching", "catwatching"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Chakra", "System Design"];

const goal = 3;
const skillColor = "navy";
const fontWeight = "bold";
---

<Layout title={pageTitle}>
  <main>
    <h1>Here are a few facts about me:</h1>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>I live in {identity.city} and I work as a {identity.occupation}.</li>
      {identity.hobbies.length >= 2 &&
        <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
      }
    </ul>
    <p>My skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {goal === 3 ? <p>My goal is for Brett to finish this site in 3 days.</p> : <p>My goal is not 3 days.</p>}
  <main>
</Layout>

<style define:vars={{skillColor, fontWeight}}>
  h1 {
    color: purple;
    font-size: 4rem;
  }
  .skill {
    color: var(--skillColor);
    font-weight: var(--fontWeight);
  }
</style>