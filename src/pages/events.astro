---
import Layout from "../layouts/Layout.astro";
import CardEvent from "../components/CardEvent.astro";
import events from "../data/events";
import { Image } from "astro:assets";
import imageData from "../images/je-rocks.jpg";
import WindowPhoto from "../components/WindowPhoto.astro";
const pageTitle = "Events";
---

<Layout title={pageTitle}>
  <main>
    <section class="banner-title">
      <WindowPhoto text="Events" />
    </section>
    <section class="events-list">
      <h2 class="media-section-titles">Past Events</h2>
      <div>
        {
          events.map((event) => (
            <div>
              <CardEvent
                eventTitle={event.title}
                concertDate={event.concertDate}
                venue={event.venue}
                venueAddress={event.venueAddress}
                city={event.city}
                eventDescription={event.description}
              />
            </div>
          ))
        }
      </div>
      <div class="image-events">
        <Image
          width={910}
          alt="Emma and Julie standing on rocks by the beach, looking off to the side towards the sun"
          src={imageData}
          class="responsive-image"
        />
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .banner-title {
    width: 100vw;
    position: relative;
    z-index: 1;
  }
  .events-list {
    display: flex;
    flex-direction: column;
    align-items: left;
    max-width: 900px;
    margin: 0 2rem;
  }
  h2 {
    font-family: "Lato", sans-serif;
    font-size: 2.25rem;
    font-weight: 300;
    margin-bottom: 1.25rem;
    margin-top: 1rem;
  }
  .image-events {
    margin-bottom: 2rem;
  }
</style>
